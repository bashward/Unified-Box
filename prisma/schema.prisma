generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  agent
}

enum Channel {
  sms
  whatsapp
}

enum Direction {
  inbound
  outbound
}

enum NoteVisibility {
  public
  private
}

enum MessageStatus {
  draft
  scheduled
  sent
  delivered
  failed
  read
}

model User {
  id     String  @id @default(cuid())
  email  String  @unique
  name   String?
  image  String?
  role   Role    @default(agent)
  teamId String
  team   Team    @relation(fields: [teamId], references: [id], onDelete: Cascade)

  threads  Thread[]
  notes    Note[]
  messages Message[] @relation("MessageAuthor")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  emailVerified Boolean   @default(false)
  sessions      Session[]
  accounts      Account[]

  @@index([teamId])
  @@map("user")
}

model Team {
  id        String     @id @default(cuid())
  name      String
  createdAt DateTime   @default(now())
  users     User[]
  contacts  Contact[]
  threads   Thread[]
  messages  Message[]
  notes     Note[]
  eventLogs EventLog[]
}

model Contact {
  id      String  @id @default(cuid())
  name    String?
  phone   String
  waOptIn Boolean @default(false) // for WA sandbox/use later
  teamId  String
  team    Team    @relation(fields: [teamId], references: [id], onDelete: Cascade)

  threads   Thread[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([teamId, phone])
  @@index([teamId])
}

model Thread {
  id        String  @id @default(cuid())
  contactId String
  ownerId   String? // optional agent "owner" - could be null
  channel   Channel
  teamId    String
  team      Team    @relation(fields: [teamId], references: [id], onDelete: Cascade)

  lastMessageAt DateTime @default(now())
  unreadCount   Int      @default(0)

  contact  Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  owner    User?     @relation(fields: [ownerId], references: [id])
  messages Message[]
  notes    Note[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([teamId, contactId, channel])
  @@index([teamId, lastMessageAt])
  @@index([teamId, channel])
  @@index([teamId, ownerId])
  @@index([contactId])
}

model Message {
  id          String        @id @default(cuid())
  threadId    String
  authorId    String? // null for inbound (customer)
  channel     Channel
  direction   Direction
  body        String
  media       Json? // URLs array or object (esp. WA)
  status      MessageStatus @default(sent)
  providerId  String? // Twilio SID
  scheduledAt DateTime?
  sentAt      DateTime? // when actually sent to provider
  deliveredAt DateTime?
  readAt      DateTime?
  teamId      String
  team        Team          @relation(fields: [teamId], references: [id])

  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  author User?  @relation(name: "MessageAuthor", fields: [authorId], references: [id])

  createdAt DateTime @default(now())

  @@index([teamId, status, scheduledAt])
  @@index([threadId, createdAt])
  @@index([status])
  @@index([scheduledAt])
}

model Note {
  id         String         @id @default(cuid())
  threadId   String
  authorId   String
  visibility NoteVisibility @default(public)
  body       String
  teamId     String
  team       Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)

  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  author User   @relation(fields: [authorId], references: [id])

  createdAt DateTime @default(now())

  @@index([teamId, threadId])
  @@index([threadId, createdAt])
  @@index([visibility])
}

model EventLog {
  id        String   @id @default(cuid())
  type      String // "message.created", "note.created", "webhook.inbound", etc.
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  payload   Json
  createdAt DateTime @default(now())

  @@index([teamId, type, createdAt])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  providerId String
  accountId  String
  type       String?

  accessToken           String?
  refreshToken          String?
  idToken               String?
  scope                 String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  password              String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([providerId, accountId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}
